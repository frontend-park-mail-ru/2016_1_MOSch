<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
	<fest:set name="record">
		<fest:if test="params">
			<div class="record">
				<div class="record__rate">
					<fest:value>params.rate</fest:value>
				</div>
				<div class="record__username">
					<fest:value>params.username</fest:value>
				</div>
			</div>
		</fest:if>
	</fest:set>
</fest:template>
